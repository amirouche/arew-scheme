<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="alternate" type="application/rss+xml" title="Ruse Scheme" href="{{ base }}/feed.xml" />
    <link rel="stylesheet" href="/static/normalize.css">
    <link rel="stylesheet" href="/static/styles.css">
    <title>hyper.dev</title>
  </head>
  <body>
    <div id="overlay">
    </div>
    <div id="container">
      <h1>Ruse Scheme <small>· <a href="feed.xml">feed</a> · <a href="https://github.com/scheme-ruse/ruse-scheme">forge</a></small></h1>
      <ul>
        {% for post in posts %}
	  <li>
            <a href="{{ base }}/{{post['filename']}}" class="grid-item">
              {{ post['title'] }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </body>
</html>
